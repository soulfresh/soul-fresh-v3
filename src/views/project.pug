.project(name="project")
  h2.project-name(name="name")= project.name

  //- YEAR
  .project-year(name="year")
    h3= project.year

  .details
    //- COMPANY
    if project.company
      .project-company(name="company")
        h4= project.company
        ul
          each position in project.positions
            li= position

    //- TOOLS
    if project.tools && project.tools.length > 0
      .project-tools(name="tools")
        ul
          each tool in project.tools
            li= tool

    //- CLIENTS
    if project.clients && project.clients.length > 0
      .project-clients(name="clients")
        ul
          each client in project.clients
            li= client

    //- LINK
    if project.link
      .project-link(name="link")
        a(href=project.link.url)
          = project.link.title

  //- PREVIEW
  case project.preview.type
    when 'video'
      .project-preview.video(name="preview", data-type="video")
        include video-player.pug
    when 'music'
      .project-preview.music(name="preview" data-type="music")
        include audio-player.pug
    when 'slideshow'
      .project-preview.slideshow(name="preview", data-type="slideshow")= 'Slideshow'
