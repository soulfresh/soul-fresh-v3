extends layout


block content
  - var first = projects[0];
  a(name="work")

  .app-container
    .header(name="header")
      h1#logo
        span.container.soul-container
          span.soul= "Soul"
        span.container.fresh-container
          span.fresh= "Fresh"
      include components/menu/menu.pug
    .subhead.color-text(class=first.id)
      = "A software developer in Denver, CO"
    .content(name="root")
      #work.work
        each project, projectIndex in projects
          include components/projects/project.pug

block colors
  include components/colors.pug

